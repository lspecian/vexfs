{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "## 🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "## 📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "## 🔧 Maintenance",
      "labels": ["maintenance", "chore", "dependencies"]
    },
    {
      "title": "## ⚡ Performance",
      "labels": ["performance", "optimization"]
    },
    {
      "title": "## 🔒 Security",
      "labels": ["security", "vulnerability"]
    }
  ],
  "ignore_labels": [
    "ignore-for-release"
  ],
  "sort": "ASC",
  "template": "${{CHANGELOG}}",
  "pr_template": "- ${{TITLE}} (#${{NUMBER}})",
  "empty_template": "- No changes",
  "label_extractor": [
    {
      "pattern": "^(feat|feature)(\\(.+\\))?!?:",
      "target": "feature"
    },
    {
      "pattern": "^(fix|bugfix)(\\(.+\\))?!?:",
      "target": "bug"
    },
    {
      "pattern": "^(docs|doc)(\\(.+\\))?!?:",
      "target": "documentation"
    },
    {
      "pattern": "^(chore|maintenance)(\\(.+\\))?!?:",
      "target": "maintenance"
    },
    {
      "pattern": "^(perf|performance)(\\(.+\\))?!?:",
      "target": "performance"
    },
    {
      "pattern": "^(security|sec)(\\(.+\\))?!?:",
      "target": "security"
    }
  ]
}